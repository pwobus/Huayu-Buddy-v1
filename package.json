{
  "name": "huayu-buddy",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "proxy": "http://localhost:8787",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "server": "node server/index.js",
    "dev": "concurrently -k \"npm:start\" \"npm:server\"",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run start\" \"wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "electron:build": "npm run build && cross-env NODE_ENV=production SERVE_UI=true electron-builder --win portable --x64"
  },
  "dependencies": {
    "@craco/craco": "7.1.0",
    "@react-three/drei": "9.56.4",
    "@react-three/fiber": "8.13.6",
    "ajv": "6.12.6",
    "ajv-keywords": "3.5.2",
    "autoprefixer": "10.4.12",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "openai": "^6.1.0",
    "pdfjs-dist": "3.4.120",
    "postcss": "8.4.18",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "3.2.4",
    "three": "0.153.0",
    "zustand": "4.4.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "30.0.3",
    "electron-builder": "^25.1.8",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "9.1.0",
    "lint-staged": "15.2.8",
    "prettier": "3.3.3",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{css,md,json}": [
      "prettier -w"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "extends": null,
    "appId": "com.huayubuddy.desktop",
    "productName": "Huayu Buddy",
{
  "files": [
    "build/**/*",
    "electron/**/*",
    "server/**/*",
    "node_modules/**/*",
    "package.json",
    "package-lock.json",
    "!server/node_modules/**"
  ]
}
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "HuayuBuddy-${version}-portable.exe"
    }
  }
}
