// File: .eslintrc.json
{
  "root": true,
  "env": { "browser": true, "es2021": true, "node": true },
  "extends": ["react-app"],
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "eqeqeq": ["warn", "smart"],
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  }
}